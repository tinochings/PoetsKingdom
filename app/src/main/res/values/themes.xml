<resources>
    <!-- Base application theme. -->
    <style name="Theme.PoetsKingdom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PoetsKingdom.NoActionBar">
        <item name="colorSecondary">@color/default_color</item>
        <item name="colorPrimary">@color/default_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/default_status_bar_color</item>
        <item name="android:windowBackground">@color/default_background_color</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="Theme.PoetsKingdom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PoetsKingdom.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.PoetsKingdom.WhiteText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <!-- TODO FIX -->
    <style name="Theme.PoetsKingdom.BlackText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FF000000</item>
        <!-- <item name="android:alertDialogTheme">@style/AlertDialogCustom</item> -->
    </style>

    <style name="Theme.PoetsKingdom.PurpleText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#FF6200EE</item>
    </style>

    <style name="Theme.PoetsKingdom.OffWhiteText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">#FAF9F6</item>
    </style>

    <style name="Theme.PoetsKingdom.BrownText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#964B00</item>

    </style>

    <style name="Theme.PoetsKingdom.BlueText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="rounded_rect">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Teardrop" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">55dp</item>
        <item name="cornerSizeBottomRight">55dp</item>
        <item name="cornerSizeBottomLeft">55dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundedRect" parent="">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.DiamondCut" parent="">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="TitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- on below line creating a theme for our Alert Dialog -->
    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- on below line adding text color for our text in alert dialog -->
        <item name="android:windowBackground">@drawable/selected_rounded_rectangle</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleStyle</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>